<div class="row">
  <div class="col-md-6 offset-md-1">
    <h1>Admin Dashboard</h1>

    <%= render @dashboard.posts %>
  </div>


  <aside class="col-md-4 offset-md-1 main-sidebar">
    <h4 class="small-heading border-top">Featured tags</h4>
    <div class="tags-wrapper featured-tags">
      <% @dashboard.featured_tags.each do |tag| %>
        <%= render partial: 'tags/tag', locals: { tag: tag } %>
      <% end %>
    </div>

    <h4 class="small-heading border-top">Other tags</h4>
    <div class="tags-wrapper">
      <% @dashboard.all_tags.each do |tag| %>
        <%= render partial: 'tags/tag', locals: { tag: tag } %>
      <% end %>
    </div>
  </aside>

</div>
