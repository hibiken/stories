<div class="bookmark-button-wrapper">
  <% if user_signed_in? %>
    <%= react_component('BookmarkButton', 
    { bookmarked: current_user.bookmarked?(post),
      bookmarkEndpoint: api_post_bookmarks_path(post),
      unbookmarkEndpoint: api_post_bookmarks_path(post),
      bookmarkableType: 'Post',
      bookmarkableId: post.id }) %>
  <% else %>
    <%= button_to '', method: :get, class: 'bookmark-button', data: { behavior: 'trigger-overlay' } do %>
      <span class="far fa-bookmark"></span><span class="hide-text">Bookmark</span>
    <% end %>
  <% end %>
</div>
