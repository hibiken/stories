<% feed.posts.each do |post| %>
  <% if feed.following_author?(post) %>
    Published by <%= link_to post.username, post.user %>
  <% elsif feed.tagged?(post) %>
    Tagged in <%= link_to feed.tag_for(post).name, feed.tag_for(post) %>
  <% end %>
  <%= render partial: 'posts/post', locals: { post: post } %>
<% end %>
