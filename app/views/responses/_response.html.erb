<div class="response">
  <div class="post-metadata">
    <%= avatar_for response.user, size: 40 %>
    <div class="post-info">
      <%= link_to response.username, response.user %><br/>
      <small><%= time_ago_in_words(response.created_at) %> ago</small>
    </div>
  </div>

  <p><%= response.body %></p>

  <div id="response_<%= response.id %>_likes">
    <%= render partial: 'responses/likes', locals: { response: response } %>
  </div>

  <% if user_signed_in? && current_user.bookmarked_response?(response) %>
    <%= button_to "Unbookmark", response_bookmark_path(response, current_user.bookmarks.find_by(bookmarkable: response)), method: :delete %>
  <% else %>
    <%= button_to "Bookmark", response_bookmarks_path(response) %>
  <% end %>
</div>
